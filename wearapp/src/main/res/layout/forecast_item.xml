<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.thewizrd.shared_resources.utils.StringUtils" />
        <import type="com.thewizrd.shared_resources.utils.WeatherUtils" />

        <variable
            name="viewModel"
            type="com.thewizrd.common.controls.ForecastItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/rounded_item_background">

        <TextView
            android:id="@+id/forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@{StringUtils.removeDigitChars(viewModel.shortDate)}"
            android:textAppearance="?textAppearanceBody1"
            tools:text="Mon" />

        <com.thewizrd.common.controls.IconControl
            android:id="@+id/forecast_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="2dp"
            app:animate="true"
            app:weatherIcon="@{viewModel.weatherIcon}"
            tools:srcCompat="@drawable/wi_day_sunny" />

        <TextView
            android:id="@+id/forecast_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@{viewModel.hiTemp}"
            android:textAppearance="?textAppearanceBody1"
            tools:text="70°" />

        <TextView
            android:id="@+id/forecast_lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@{viewModel.loTemp}"
            android:textAppearance="?textAppearanceBody1"
            android:textColor="?colorOnSurfaceVariant"
            tools:text="52°" />

    </LinearLayout>
</layout>