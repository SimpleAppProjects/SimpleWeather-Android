<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Wear.WearChipButton" parent="@android:style/Widget">
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/round_selectable_item</item>
        <item name="android:checkable">false</item>
        <item name="android:background">@drawable/button_background_solid</item>
        <!--<item name="android:minWidth">172dp</item>-->
        <item name="minHeight">52dp</item>
        <item name="primaryTextAppearance">@style/TextAppearance.WearChipButton.PrimaryText</item>
        <item name="secondaryTextAppearance">@style/TextAppearance.WearChipButton.SecondaryText
        </item>
    </style>

    <style name="TextAppearance.WearChipButton.PrimaryText" parent="TextAppearance.Roboto.Button">
        <item name="android:textColor">@color/wear_chip_primary_text_color</item>
    </style>

    <style name="TextAppearance.WearChipButton.SecondaryText" parent="TextAppearance.Roboto.Caption2">
        <item name="android:textColor">@color/wear_chip_secondary_text_color</item>
    </style>

    <style name="Widget.Wear.WearChipButton.Accent" parent="Widget.Wear.WearChipButton">
        <item name="android:background">@drawable/button_background_accent</item>
        <item name="backgroundTint">?colorPrimary</item>
    </style>

    <style name="Widget.Wear.WearChipButton.Surface" parent="Widget.Wear.WearChipButton">
        <item name="android:background">@drawable/button_background_onsurface</item>
    </style>

    <style name="Widget.Wear.WearChipButton.Surface.Accent" parent="Widget.Wear.WearChipButton">
        <item name="android:background">@drawable/button_background_accent_onsurface</item>
        <item name="backgroundTint">?colorPrimary</item>
    </style>

    <style name="Widget.Wear.WearChipButton.Checkable" parent="Widget.Wear.WearChipButton">
        <item name="android:background">@drawable/button_background_accent</item>
        <item name="android:checkable">true</item>
        <item name="backgroundTint">@color/button_background_checkable</item>
        <item name="buttonTint">@color/button_checkable</item>
    </style>

    <style name="Widget.Wear.WearChipButton.Surface.Checkable" parent="Widget.Wear.WearChipButton">
        <item name="android:background">@drawable/button_background_accent_onsurface</item>
        <item name="android:checkable">true</item>
        <item name="backgroundTint">@color/button_background_checkable</item>
        <item name="buttonTint">@color/button_checkable</item>
    </style>

</resources>