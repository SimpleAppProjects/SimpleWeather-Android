    <!-- Base application theme. -->
    <style name="WearAppTheme" parent="Base.AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
